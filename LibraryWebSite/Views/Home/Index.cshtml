@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
 <div class="row">
     <div class="col-md-12 text-center">
        <h1 class="display-6">Welcome</h1>
    </div>
 </div>
  <div class="row">
    <div class="col">
      <a href="@Url.Action("Index","LibraryBook", new { area = "" })">
            <div class="main-container-item">
                <div class="col-md-8 col-xs-12 main-container-item-left ">
                    <h3>Library Books</h3>
                </div>
                <div class="col-md-4 col-xs-12 main-container-item-right">
                    <i class="fa fa-building fa-4x"></i>
